<?xml version="1.0"?>
<ruleset name="Aurora">
	<description>The coding standard for Anodyne's Nova 3 RPG system.</description>
	
	<file>extensions</file>
	<file>nova</file>
	<file>themes</file>
	<file>index.php</file>

	<exclude-pattern>*/nova/bootstrap/cache/*</exclude-pattern>
	<exclude-pattern>*/nova/dist/*</exclude-pattern>
	<exclude-pattern>*/nova/tests/*</exclude-pattern>
	<exclude-pattern>*/nova/vendor/*</exclude-pattern>

	<arg value="p"/>

	<rule ref="PSR2">
		<exclude name="Generic.WhiteSpace.DisallowTabIndent"/>
		<exclude name="Generic.Files.LineLength"/>
	</rule>
	<rule ref="nova/src/CodeSniffer/Standards/Anodyne"/>
	<rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>
	<rule ref="Generic.WhiteSpace.ScopeIndent">
		<properties>
			<property name="indent" value="4"/>
			<property name="tabIndent" value="true"/>
		</properties>
	</rule>
</ruleset>