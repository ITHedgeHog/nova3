{
	"config": {
		"vendor-dir": "nova/vendor",
		"bin-dir": "nova/vendor/bin",
		"preferred-install": "dist"
	},

	"require": {
		"php": ">=5.4.0",

		"laravel/framework": "4.0.*",

		"dflydev/markdown": "1.*",
		"ikimea/browser": "1.*",
		"baum/baum": "1.*",
		"cartalyst/sentry": "dev-master",
		"cartalyst/api": "1.*"
	},

	"require-dev": {
		"phpunit/phpunit": "3.7.*",
		"mockery/mockery": "0.7.*",
		"way/laravel-test-helpers": "dev-master",
		"raveren/kint": "dev-master"
	},

	"repositories": [
		{
			"type": "composer",
			"url": "http://packages.cartalyst.com"
		}
	],

	"autoload": {
		"classmap": [
			"app/database/migrations",
			"nova/src/nova/setup/database/migrations",
			"nova/src/nova/setup/database/seeds"
		],

		"psr-0": {
			"App\\": "",
			"Modules\\": "app/",
			"Nova\\": "nova/src/"
		}
	},
	
	"minimum-stability": "dev"
}