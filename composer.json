{
	"name": "anodyne/nova3",
	"version": "3.0.0-alpha.2",
	"description": "Nova 3 RPG Management",
	"homepage": "http://anodyne-productions.com",
	"keywords": ["cms", "anodyne", "nova", "nova3"],
	"type": "project",
	"license": "MIT",
	"authors": [
		{
			"name": "David VanScott",
			"email": "davidv@anodyne-productions.com",
			"role": "Developer"
		}
	],

	"config": {
		"vendor-dir": "nova/vendor",
		"bin-dir": "nova/vendor/bin",
		"preferred-install": "dist",
		"process-timeout": 500
	},

	"require": {
		"php": ">=5.4.0",
		"laravel/framework": "4.0.*",
		"dflydev/markdown": "1.*",
		"ikimea/browser": "1.*",
		"baum/baum": "1.*",
		"cartalyst/sentry": "2.*",
		"thomaswelton/laravel-gravatar": "dev-master",
		"intervention/image": "1.*"
	},

	"require-dev": {
		"phpunit/phpunit": "3.7.*",
		"mockery/mockery": "0.7.*",
		"way/laravel-test-helpers": "dev-master",
		"raveren/kint": "dev-master",
		"fzaninotto/faker": "1.*",
		"behat/behat": "2.4.*"
	},

	"autoload": {
		"classmap": [
			"nova/src/Nova/Setup/database/migrations",
			"nova/src/Nova/Setup/database/seeds"
		],

		"psr-0": {
			"App\\": "app/src/",
			"Modules\\": "app/src/",
			"Nova\\": "nova/src/"
		}
	},
	
	"minimum-stability": "dev",
	"prefer-stable": true
}