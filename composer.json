{
	"require": {
		"laravel/framework": "~5.2",
		"dflydev/symfony-finder-factory": "*",
		"league/commonmark": "*",
		"laracasts/presenter": "*",
		"laravelcollective/html": "~5.2",
		"league/fractal": "*",
		"dingo/api": "1.0.*@dev"
	},

	"require-dev": {
		"fzaninotto/faker": "~1.4",
		"mockery/mockery": "0.9.*",
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
		"symfony/dom-crawler": "~3.0",
		"symfony/css-selector": "~3.0",
		"barryvdh/laravel-debugbar": "~2.1"
	},

	"autoload": {
		"classmap": [
			"nova/src/Setup/database"
		],
		"files": [
			"nova/src/Foundation/helpers.php"
		],
		"psr-4": {
			"Extensions\\": "extensions/",
			"Nova\\": "nova/src/"
		}
	},

	"autoload-dev": {
		"classmap": [
			"nova/tests/TestCase.php"
		]
	},

	"config": {
		"vendor-dir": "nova/vendor",
		"bin-dir": "nova/vendor/bin",
		"preferred-install": "dist",
		"process-timeout": 500
	},

	"minimum-stability": "dev",
	"prefer-stable": true
}
