{
    "name": "anodyne/nova3",
    "type": "project",
    "description": "Nova 3 RPG Management",
    "keywords": [
        "cms",
        "app",
        "anodyne",
        "nova",
        "rpg"
    ],
    "license": "MIT",

    "require": {
        "php": "^7.1.3",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "5.7.*",
        "laravel/tinker": "^1.0",
        "spatie/laravel-html": "^2.19"
    },

    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.2",
        "beyondcode/laravel-dump-server": "^1.0",
        "filp/whoops": "^2.0",
        "fzaninotto/faker": "^1.4",
        "mikey179/vfsStream": "^1.6",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^2.0",
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^2.8"
    },

    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },

    "autoload": {
        "psr-4": {
            "Nova\\": "nova/src/",
            "Nova\\Foundation\\": "nova/foundation/",
            "Nova\\Setup\\": "nova/setup/",
            "Themes\\": "themes/"
        },
        "classmap": [
            "nova/database/seeds",
            "nova/database/factories"
        ],
        "files": [
            "nova/helpers.php"
        ]
    },

    "autoload-dev": {
        "psr-4": {
            "Tests\\": "nova/tests/"
        }
    },

    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php -r \"file_exists('nova/vendor') && !file_exists('vendor') && symlink('nova/vendor', 'vendor');\"",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },

    "config": {
        "bin-dir": "nova/vendor/bin",
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "vendor-dir": "nova/vendor"
    },

    "minimum-stability": "dev",
    "prefer-stable": true
}
