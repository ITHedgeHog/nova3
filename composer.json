{
	"config": {
		"vendor-dir": "nova/vendor"
	},

	"require": {
		"laravel/framework": "4.0.*",

		"dandoescode/datum": "1.0.*",
		"dflydev/markdown": "1.0.*",
		"jonob/html": "1.*",
		"cartalyst/sentry": "dev-master"
	},
	"require-dev": {
		"raveren/kint": "dev-master",
		"ikimea/browser": "dev-master"
	},

	"autoload": {
		"classmap": [
			"app/commands",
			"app/database/migrations",
			"nova/src/Nova/Setup/database/migrations"
		],

		"psr-0": {
			"App\\": "",
			"Module\\": "app/",
			"Nova\\": "nova/src/"
		}
	},
	
	"minimum-stability": "dev"
}