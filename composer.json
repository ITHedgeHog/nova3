{
	"require": {
		"php": ">=7.1.3",
		"creativeorange/gravatar": "^1.0",
		"erusev/parsedown": "^1.6",
		"fideloper/proxy": "~4.0",
		"guzzlehttp/guzzle": "^6.3",
		"intervention/image": "^2.0",
		"Krinkle/intuition": "~0.5",
		"laracasts/presenter": "^0.2",
		"laravel/framework": "5.6.*",
		"laravel/tinker": "~1.0",
		"laravelcollective/html": "5.6.*",
		"nothingworks/blade-svg": "^0.1",
		"spatie/laravel-activitylog": "^2.4",
		"spatie/laravel-html": "^2.12",
		"spatie/laravel-sluggable": "^2.1",
		"tightenco/ziggy": "^0.3"
	},

	"require-dev": {
		"barryvdh/laravel-debugbar": "^3.1",
		"filp/whoops": "~2.0",
		"fzaninotto/faker": "~1.4",
		"laravel/dusk": "~3.0",
		"mockery/mockery": "~1.0",
		"nunomaduro/collision": "~1.1",
		"phpunit/phpunit": "~7.0",
		"squizlabs/php_codesniffer": "^2.8"
	},

	"autoload": {
		"classmap": [
			"nova/database"
		],
		"files": [
			"nova/src/helpers.php"
		],
		"psr-4": {
			"Nova\\": "nova/src/",
			"Extensions\\": "extensions/"
		}
	},

	"autoload-dev": {
		"files": [
			"nova/tests/utilities/functions.php"
		],
		"psr-4": {
			"Tests\\": "nova/tests/"
		}
	},

	"scripts": {
		"post-install-cmd": [
			"Illuminate\\Foundation\\ComposerScripts::postInstall"
		],

		"post-update-cmd": [
			"Illuminate\\Foundation\\ComposerScripts::postUpdate"
		],

		"post-autoload-dump": [
			"Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
			"@php artisan package:discover"
		]
	},

	"config": {
		"bin-dir": "nova/vendor/bin",
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true,
		"vendor-dir": "nova/vendor"
	},

	"minimum-stability": "dev",
	"prefer-stable": true
}
