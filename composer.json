{
	"config": {
		"vendor-dir": "nova/vendor",
		"preferred-install": "dist"
	},

	"require": {
		"php": ">=5.4.0",

		"laravel/framework": "4.*",

		"dflydev/markdown": "1.*",
		"ikimea/browser": "1.*",
		"baum/baum": "1.*",
		"raveren/kint": "dev-master",
		"cartalyst/sentry": "dev-master",
		"cartalyst/api": "1.0.*",
		"cartalyst/nested-sets": "dev-master"
	},

	"repositories": [
		{
			"type": "composer",
			"url": "http://packages.cartalyst.com"
		}
	],

	"autoload": {
		"classmap": [
			"app/database/migrations",
			"nova/src/Nova/Setup/database/migrations",
			"app/tests/TestCase.php"
		],

		"psr-0": {
			"App\\": "",
			"Module\\": "app/",
			"Nova\\": "nova/src/"
		}
	},
	
	"minimum-stability": "dev"
}