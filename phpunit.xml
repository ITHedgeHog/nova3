<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
		 backupStaticAttributes="false"
		 bootstrap="nova/start/autoload.php"
		 colors="true"
		 convertErrorsToExceptions="true"
		 convertNoticesToExceptions="true"
		 convertWarningsToExceptions="true"
		 processIsolation="false"
		 stopOnFailure="true"
		 syntaxCheck="false"
>
	<testsuites>
		<testsuite name="core">
			<directory>./nova/tests/core/</directory>
		</testsuite>

		<testsuite name="extensions">
			<directory>./nova/tests/extensions/</directory>
		</testsuite>

		<testsuite name="setup">
			<directory>./nova/tests/setup/</directory>
		</testsuite>
	</testsuites>
</phpunit>